                <listPage:ChooseCamChannel/>
            </Border>
            <UniformGrid>
                <Border Margin="5" Background="Black" x:Name="third">
                    <listPage:ChooseCamChannel/>
                </Border>
            </UniformGrid>
            <UniformGrid>
                <Border Margin="5" Background="Black" >
                    <listPage:ChooseCamChannel/>
                </Border>
            </UniformGrid>
            <UniformGrid >
                <Border Margin="5" Background="Black"  >
                    <listPage:ChooseCamChannel/>
                </Border>
            </UniformGrid>
        </UniformGrid>
    </Grid>
</UserControl>
